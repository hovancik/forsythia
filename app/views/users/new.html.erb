<% provide(:title, 'Sign up') %>
<div class="form">
  <%= form_for(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign up", class: "button" %>

  <%= render 'shared/error_messages', object: f.object %>
  <% end %>
</div>
